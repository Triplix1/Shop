@model Category

<form method="post" asp-action="Update">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <hr />
        </div>
    </div>

    <input name="original.Id" value="@Model.Id" type="hidden" />
    <input name="original.CategoryName" value="@Model.CategoryName" type="hidden" />
    <input asp-for="Id" hidden />

    <div class="mb-3">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div id="sizes-list" class="mb-3">
        @{
            int counter = 0;
         }
        @foreach (var size in Model.Sizes)
        {
            <div id="select-size-@counter" class="mb-3">
                <input name="Sizes[@counter].Id" value="@size.Id" hidden />
                <label for="Sizes">Enter @(counter + 1) size:</label>
                <p>Size in string:</p>
                <input name="Sizes[@counter].InString" class="form-control" value="@size.InString" />
                <p>Size in number:</p>
                <input type="number" name="Sizes[@counter].InNumber" class="form-control" value="@size.InNumber" />
            </div>
            counter++;
        }
    </div>
    <div onclick="AddSizeRowForUpdate()" class="btn btn-primary">Add Size</div>
    <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
</form>

<script src=~/js/category.js></script>
